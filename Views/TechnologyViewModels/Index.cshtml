@model IEnumerable<SpaceEmpire4XTracker.Models.TechnologyViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TechnologyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TechnologyLevel.LevelNumber)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Cost.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TechnologyName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TechnologyLevel.LevelNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cost.Cost)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.TechId }) |
        @Html.ActionLink("Details", "Details", new { id = item.TechId }) |
